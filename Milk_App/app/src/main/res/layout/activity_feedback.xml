<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    tools:context=".FeedbackActivity">

    <TextView
        android:id="@+id/feedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Feedback Matters!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/feedbackTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:hint="Enter your feedback here"
        android:gravity="top"
        android:padding="8dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/addImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Image"
        app:layout_constraintTop_toBottomOf="@id/feedbackEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submitButton"
        android:backgroundTint="#B0E0E6"
        android:textColor="#004D40"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        app:layout_constraintTop_toBottomOf="@id/feedbackEditText"
        app:layout_constraintStart_toEndOf="@id/addImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#B0E0E6"
        android:textColor="#004D40"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/attachedImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:background="#ccc"
        app:layout_constraintTop_toBottomOf="@id/addImageButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
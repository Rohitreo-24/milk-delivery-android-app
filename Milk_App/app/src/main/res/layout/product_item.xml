<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutProductItem"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@drawable/product_card_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ðŸ–¼ï¸ Product Image -->

    <!-- ðŸ§¾ Product Info + Buttons -->

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="79dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Product image"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/panner" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtProductName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtProductDetails"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtProductPrice"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#047857"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAddWishlist"
                android:text="â™¡ Wishlist"
                android:layout_marginEnd="6dp"
                android:backgroundTint="#F59E0B"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnBuy"
                android:text="Buy Now"
                android:backgroundTint="#10B981"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutProductDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_milk_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image"
            android:layout_marginBottom="16dp"
            android:background="@drawable/dashboard_grid_bg" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product details go here..."
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:textColor="#212121" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAddWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Wishlist â¤ï¸"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF4081"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Now ðŸ›’"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnView3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View in 3D ðŸ§Š"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>

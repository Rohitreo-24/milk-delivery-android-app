<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customers for Delivery"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/finishDeliveryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Finish Delivery"
        android:backgroundTint="#4d8876"
        android:layout_marginTop="8dp" />

    <!-- New Route Planning Button -->
    <Button
        android:id="@+id/routePlanningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/finishDeliveryButton"
        android:text="Show Delivery Route"
        android:backgroundTint="#B0E0E6"
        android:textColor="#004D40"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deliveryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/routePlanningButton"
        android:layout_marginBottom="16dp" />

</RelativeLayout>

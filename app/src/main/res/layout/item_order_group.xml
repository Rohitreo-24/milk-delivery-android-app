<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#fffbf1">  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btnDeleteGroup"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvGroupRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 Jan 2025 - 07 Jan 2025"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGroupDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Morning: 1L  Evening: 500ml"
            android:textColor="#555" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDeleteGroup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="Delete group"
        android:src="@drawable/ic_menu_delete" />

</RelativeLayout>
</androidx.cardview.widget.CardView>